<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record
    model="ir.ui.view"
    id="mrp_production_tree_view_mrp_multi_level_inherit">
        <field name="name">mrp.production.tree.mrp.multi.level.inherit</field>
        <field name="model">mrp.production</field>
        <field
        name="inherit_id"
        ref="mrp.mrp_production_tree_view" />
        <field
        name="arch"
        type="xml">
            <field
            name="origin"
            position="after">
                <field
                name="origin_sale_order_ids"
                widget="many2many_tags" />
            </field>
        </field>
    </record>
    <record
    model="ir.ui.view"
    id="mrp_production_form_view_mrp_multi_level_inherit">
        <field name="name">mrp.production.form.mrp.multi.level.inherit</field>
        <field name="model">mrp.production</field>
        <field
        name="inherit_id"
        ref="mrp.mrp_production_form_view" />
        <field
        name="arch"
        type="xml">
            <xpath
            expr="//div[@name='button_box']"
            position="inside">
                <button
                type="object"
                name="action_view_origin_sale_order_ids"
                icon="fa-line-chart"
                class="oe_stat_button">
                    <field
                    name="origin_sale_order_ids_count"
                    widget="statinfo"
                    string="Sale orders" />
                </button>
            </xpath>
            <xpath
            expr="//page[@name='miscellaneous']"
            position="after">
                <page
                name="linked_orders"
                string="Linked Orders">
                    <group>
                        <field name="origin_sale_order_ids">
                            <tree>
                                <field name="name" />
                                <field name="date_order" />
                                <field name="partner_id" />
                                <field name="state" />
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

